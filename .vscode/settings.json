{
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnSave": true,
	"search.exclude": {
		"**/node_modules": true
	},
	"editor.codeActionsOnSave": {
		"source.organizeImports.biome": "explicit"
	},
	"biome.lspBin": "./biome",
	"remote.autoForwardPortsSource": "process",
	"tailwindCSS.experimental.classRegex": [
		["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
		["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
	],
	"files.associations": {
		"*.css": "tailwindcss"
	}
}

---
import type { NonNullableProps } from "@utils/types";
import type { HTMLAttributes } from "astro/types";
import { cva } from "class-variance-authority";

const linkVariants = cva(["hover:bg-primary-200", "py-3"], {
  variants: {
    variant: {
      navLink: ["px-5"],
      dropdownLink: ["block", "text-center"],
    },
  },
});

type LinkVariants = NonNullableProps<typeof linkVariants, "variant">;

interface Props extends HTMLAttributes<"a">, LinkVariants {}

const { variant } = Astro.props;
---

<a class={`${linkVariants({ variant })} ${Astro.props.class}`} {...Astro.props}
  ><slot /></a
>

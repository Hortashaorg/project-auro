---
import Layout from "@layouts/Layout.astro";
import LoggedIn from "@sections/home/LoggedIn.astro";
import LoggedInWithoutServer from "@sections/home/LoggedInWithoutServer.astro";
import LoggedOut from "@sections/home/LoggedOut.astro";

const locals = Astro.locals;
---
<Layout title="Home" id="home">
  {locals.loggedIn ? (
    locals.server ? (
      <LoggedIn />
    ) : (
      <LoggedInWithoutServer />
    )
  ) : (
    <LoggedOut />
  )}
</Layout>
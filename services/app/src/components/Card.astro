---
import type { HTMLAttributes } from "astro/types";
import Text from "./Text.astro";

interface Props extends HTMLAttributes<"div"> {
	title: string;
}

const { title } = Astro.props;
---

<div
  class={`block w-[12rem] h-[15rem] p-5 bg-background-default border border-primary- rounded-sm ${Astro.props.class}`}
  {...Astro.props}
>
  <Text variant="header" alignment="center">
    {title}
  </Text>
  <div class="flex justify-center">
    <slot />
  </div>
</div>

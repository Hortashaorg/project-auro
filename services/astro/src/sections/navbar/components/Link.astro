---
import type { RequiredProps } from "@src/types";
import type { HTMLAttributes } from "astro/types";
import { cva } from "class-variance-authority";

const linkVariants = cva(["hover:bg-primary-200"], {
  variants: {
    variant: {
      navLink: [
        "bg-blue-500",
        "text-white",
        "border-transparent",
        "hover:bg-blue-600",
      ],
      dropdownLink: ["block", "py-3", "text-center"],
    },
  },
});

type ButtonVariants = RequiredProps<typeof linkVariants, "variant">;

interface Props extends HTMLAttributes<"a">, ButtonVariants {}

const { variant } = Astro.props;
---

<a class={`${linkVariants({ variant })} ${Astro.props.class}`} {...Astro.props}
  ><slot /></a
>
